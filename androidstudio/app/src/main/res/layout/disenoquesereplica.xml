<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">



<TextView
android:id="@+id/operando1"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15sp"
android:layout_alignParentTop="true"

    />
<TextView
android:id="@+id/operando2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15sp"

android:layout_toRightOf="@+id/operando1"

    />

<TextView
android:id="@+id/respuesta"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15sp"

android:layout_toRightOf="@+id/operando2"

    />
<TextView
android:id="@+id/operacion"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="15sp"

android:layout_toRightOf="@+id/respuesta"

    />

    <Button
        android:id="@+id/btnelimina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/operando1"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/operacion"
        android:text="Eliminar" />




    </RelativeLayout>